{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4, { "ignoreComments": true }],
        "no-tabs": 0,
        "eqeqeq": 0,
        "quotes": ["error", "backtick"],
        "linebreak-style": 0,
        "no-plusplus": 0,
        "no-param-reassign": 0,
        "consistent-return": 0,
        "func-names": 0,
        "comma-dangle": 0,
        "implicit-arrow-linebreak": 0,
        "function-paren-newline": 0,
        "operator-linebreak": 0
    }
}
